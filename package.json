{
  "name": "pixel-buddy",
  "version": "1.0.0",
  "description": "Immortal Tamagotchi with AI memory and multiplayer - Your pet lives forever in Postgres",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "test": "jest --coverage",

    "docker:up": "./scripts/dev.sh up",
    "docker:down": "./scripts/dev.sh down",
    "docker:restart": "./scripts/dev.sh restart",
    "docker:logs": "./scripts/dev.sh logs app",
    "docker:logs:db": "./scripts/dev.sh logs db",
    "docker:status": "./scripts/dev.sh status",
    "docker:migrate": "./scripts/dev.sh db:migrate",
    "docker:seed": "./scripts/dev.sh db:seed",
    "docker:reset": "./scripts/dev.sh db:reset",
    "docker:psql": "./scripts/dev.sh db:psql",
    "docker:shell": "./scripts/dev.sh shell",
    "docker:build": "./scripts/dev.sh build",
    "docker:clean": "./scripts/dev.sh clean",

    "up": "npm run docker:up",
    "down": "npm run docker:down",
    "logs": "npm run docker:logs",
    "restart": "npm run docker:restart"
  },
  "keywords": [
    "tamagotchi",
    "ai",
    "multiplayer",
    "postgresql",
    "pwa",
    "ollama",
    "railway"
  ],
  "author": "Christopher Junker",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
